<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="10dp"
    app:cardCornerRadius="5dp"
    android:layout_margin="10dp"
    android:id="@+id/cv_main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        >

        <TextView
            android:id="@+id/tv_id_placeholder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="User ID"
            />

        <TextView
            android:id="@+id/tv_name_placeholder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name"
            />

        <TextView
            android:id="@+id/tv_username_placeholder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Username"
            />

        <TextView
            android:id="@+id/tv_email_placeholder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginStart="75dp"
        >

        <TextView
            android:id="@+id/tv_id_colon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=":"
            />

        <TextView
            android:id="@+id/tv_name_colon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=":"
            />

        <TextView
            android:id="@+id/tv_username_colon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=":"
            />

        <TextView
            android:id="@+id/tv_email_colon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=":"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginStart="90dp"
        >

        <TextView
                android:id="@+id/tv_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/id_user"
                />

        <TextView
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/name"
                />

            <TextView
                android:id="@+id/tv_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/username_user"
                />

            <TextView
                android:id="@+id/tv_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/email_user"
            />

    </LinearLayout>
</androidx.cardview.widget.CardView>